<div class="container">

<h1 class="mt-5" >News</h1>

<%= search_form_for @q do |f| %>
  <div class="row">
    <div class="col-md-8">
      <%= f.text_field :title_cont, placeholder: "Search Here..!!", class: "form-control" %><br>
    </div>
    <div class="col-md-4">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>


<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Attachment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.title %></td>
        <td><%= news.description %></td>
        <td><%= news.attachment %></td>
        <td><%= link_to 'Show', news %></td>
        <td><%= link_to 'Edit', edit_news_path(news) %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News', new_news_path %>
</div>
